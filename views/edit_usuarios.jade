extends layouts/header.jade

block content
			.page-data
			
				form(method="post" action="/usuarios/edit/#{data[0].id}" class="form-signin")
					table(cellpadding="11")
						tr
							td.label Usuario
							td 
								input(type="text" name="usuario" value="#{data[0].usuario}" class="form-control" required)
						tr
							td.label Clave
							td 
								input(type="password" value="#{data[0].clave}" name="clave" class="form-control" required)
						tr
							td.label Comentarios
							td 
								input(type="text" value="#{data[0].comentarios}" name="comentarios" class="form-control" )
						tr
							td.label
							td
								input(type="submit" name="submit" value="Guardar" class="btn btn-success")
								&nbsp;&nbsp;
								input(type="button" name="cancel" value="Cancelar" class="cancel btn btn-danger" onClick="cancelAddUsuario()")
							
			include layouts/footer.jade
