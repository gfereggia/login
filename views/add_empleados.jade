extends layouts/header.jade


block content	
			.page-data
			
				form(method="post" action="/empleados/add" class="form-signin")
					table(cellpadding="11")
						tr
							td.label Nombre
							td 
								input(type="text" name="nombre" class="form-control" required)
						tr
							td.label Apellido
							td 
								input(type="text" name="apellido" class="form-control" required)
						tr
							td.label Mail
							td 
								input(type="text" name="mail" class="form-control" required)
						tr
							td.label Clave Mail
							td 
								input(type="text" name="clave_mail" class="form-control")
						tr
							td.label Clave Dominio
							td 
								input(type="text" name="clave_dominio" class="form-control")
						tr
							td.label Comentarios
							td 
								input(type="text" name="Comentarios" class="form-control")
						tr					
							td.label Empresa		
								select(name='empresa' class="select")
									for empresa in data
										option(value=empresa.id)=empresa.empresa
						tr
							td.label
							td
								input(type="submit" name="submit" value="Guardar" class="btn btn-success")
								&nbsp;&nbsp;
								input(type="button" name="cancel" value="Cancelar" class="cancel btn btn-danger" onClick="cancelAddEmpresa()")
							
			include layouts/footer.jade