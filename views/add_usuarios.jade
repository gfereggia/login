extends layouts/header.jade

block content
			.page-data
			
				form(method="post" action="/usuarios/add" class="form-signin")
					table(cellpadding="11")
						tr
							td.label Usuario
							td 
								input(type="text" name="usuario" class="form-control" required)
						tr
							td.label Clave
							td 
								input(type="password" name="clave" class="form-control" required)
						tr
							td.label Comentarios
							td 
								input(type="text" name="Comentarios" class="form-control")
						tr
							td.label
							td
								input(type="submit" name="submit" value="Guardar" class="btn btn-success") 
								&nbsp;&nbsp;
								input(type="button" name="cancel" value="Cancelar" class="cancel btn btn-danger	" onClick="cancelAdd()")
							
			include layouts/footer.jade