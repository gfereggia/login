extends layouts/header.jade

block content
			.page-data
			
				form(method="post" action="/productos/edit/#{data[0].id}" class="form-signin")
					table(cellpadding="11")
						tr
							td.label Nombre
							td 
								input(type="text" name="nombre" value="#{data[0].nombre}" class="form-control" required)
						tr
							td.label Precio
							td 
								input(type="number" value="#{data[0].precio}" name="precio" class="form-control" required)
						tr
							td.label Cantidad
							td 
								input(type="number" value="#{data[0].cantidad}" name="cantidad" class="form-control" required)
						tr
							td.label Comentarios
							td 
								input(type="text" value="#{data[0].comentarios}" name="comentarios" class="form-control" )
						tr
							td.label
							td
								input(type="submit" name="submit" value="Guardar" class="btn btn-success")
								&nbsp;&nbsp;
								input(type="button" name="cancel" value="Cancelar" class="cancel btn btn-danger" onClick="cancelAdd()")
							
			include layouts/footer.jade
